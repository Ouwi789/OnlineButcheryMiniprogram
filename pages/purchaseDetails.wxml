    <input name='content' placeholder='enter address'></input>
    <button form-type='submit'>Submit</button>
  </form>
  </mp-cell>

  <mp-cell>
    <mp-checkbox-group>
      <mp-checkbox label="Can you received it at anytime?"></mp-checkbox>
    </mp-checkbox-group>
  </mp-cell>
    
